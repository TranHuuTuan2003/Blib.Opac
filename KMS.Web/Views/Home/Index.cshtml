				nhiều nhất.
			</label>
			<div class="collectionBlock__selectorGroup">
				@await Html.PartialAsync("Home/_CollectionSelectorItem", new CollectionSelectorItemVM { title = "Tài liệu Địa chí" })
				@await Html.PartialAsync("Home/_CollectionSelectorItem", new CollectionSelectorItemVM { title = "Báo, tạp chí" })
				@await Html.PartialAsync("Home/_CollectionSelectorItem", new CollectionSelectorItemVM { title = "Sách điện tử" })
				@await Html.PartialAsync("Home/_CollectionSelectorItem", new CollectionSelectorItemVM { title = "Đa phương tiện" })
			</div>
		</div>
		<div class="collectionBlock__rightDocuments">
			<div class="horizontal-grid-documents">
				@for (int i = 1; i <= 10; i++)
				{
					@await Html.PartialAsync("Home/_CollectionDocumentCard",
					new CollectionDocumentCardVM
					{
						image_url = $"https://covers.openlibrary.org/b/id/{i * 2 + 33000}-M.jpg",
						title = "Sách nổi bật",
						author = "UCVN KMS"
					})
								}
			</div>
			<div class="horizontal-grid-documents">
				@for (int i = 0; i <= 7; i++)
				{
					@await Html.PartialAsync("Home/_CollectionDocumentCard",
					new CollectionDocumentCardVM
					{
						image_url = $"https://covers.openlibrary.org/b/id/{i * 3 + 13000}-M.jpg",
						title = "Sách hay",
						author = "UCVN KMS"
