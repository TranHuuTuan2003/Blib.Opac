@using KMS.Web.Common

<!DOCTYPE html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg"
	data-sidebar-image="none">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="Smarthr - Bootstrap Admin Template">
	<meta name="keywords"
		content="admin, estimates, bootstrap, business, corporate, creative, management, minimal, modern, accounts, invoice, html5, responsive, CRM, Projects">
	<meta name="author" content="Dreamstechnologies - Bootstrap Admin Template">
	<title>Hết phiên sử dụng - UCVN</title>

	<!-- Favicon -->
	<link rel="shortcut icon" type="image/x-icon" href="@ConstLocation.value/img/favicon.png">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="@ConstLocation.value/css/bootstrap.min.css">

	<!-- Fontawesome CSS -->
	<link rel="stylesheet" href="@ConstLocation.value/plugins/fontawesome/css/fontawesome.min.css">
	<link rel="stylesheet" href="@ConstLocation.value/plugins/fontawesome/css/all.min.css">

	<!-- Lineawesome CSS -->
	<link rel="stylesheet" href="@ConstLocation.value/css/line-awesome.min.css">
	<link rel="stylesheet" href="@ConstLocation.value/css/material.css">

	<!-- Main CSS -->
	<link rel="stylesheet" href="@ConstLocation.value/css/style.css">
	<style>
		.error-page {
			background-color: #ffffff;
		}

		.error-box {
			display: flex;
			flex-direction: column;
			align-items: center;
		}

		.error-box img {
			width: 200px;
			height: 200px;
		}

		.error-box a {
			transition-duration: 300ms;
		}

		.error-box a:hover {
			transform: scale(1.02);
		}

		.btn-custom {
			display: flex;
			align-items: center;
			justify-content: center;
			gap: 10px;
		}

		.btn-custom img {
			width: 20px;
			height: 20px;
			margin-right: 10px;
		}

		@@keyframes moveLeftRight {
			0% {
				transform: translateX(0);
			}

			25% {
				transform: translateX(-5px);
			}

			50% {
				transform: translateX(5px);
			}

			75% {
				transform: translateX(-5px);
			}

			100% {
				transform: translateX(0);
			}
		}

		a img {
			animation: moveLeftRight 1s infinite ease-in-out;
			display: inline-block;
			vertical-align: middle;
			margin-right: 6px;
		}
	</style>
</head>

<body class="error-page">
	<!-- Main Wrapper -->
	<div class="main-wrapper">

		<div class="error-box">
			<img src="@ConstLocation.value/img/auth/session_expired.webp" />
			<h4 class="mt-4">Phiên làm việc của người dùng đã hết hạn.</h4>
			<a href="@ConstLocation.value/dang-nhap" class="btn btn-custom mt-4"><img
					src="@ConstLocation.value/img/auth/pointing_finger_icon.png" />Bấm vào đây để quay lại trang đăng
				nhập</a>
		</div>

	</div>
	<!-- /Main Wrapper -->
</body>

</html>